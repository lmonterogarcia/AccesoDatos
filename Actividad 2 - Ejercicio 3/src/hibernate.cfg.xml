		<property name="hibernate.connection.url">jdbc:oracle:thin:@luismontero.ddns.net:1521:ORCL</property>
		<property name="hibernate.connection.username">LUIS</property>
    	<property name="hibernate.connection.password">informedac</property>
		<property name="hibernate.connection.pool_size">10</property>
		<property name="hibernate.connection.dialect">org.hibernate.dialect.Oracle10Dialect</property>
		
		<!-- Mostrar el SQL general por la consola para debugging -->
		<property name="show_sql">false</property>
